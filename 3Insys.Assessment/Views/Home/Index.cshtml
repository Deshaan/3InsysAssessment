@model TShirtHomeModel;

<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }

        .card:hover .divChild {
            display: flex;
            flex-direction: column;
        }

    .divChild {
        display: none;
        position: absolute;
        top: 10px;
        right: 10px;
    }

        .divChild a img {
            width: 20px;
            height: 20px;
        }

    .card-img-top {
        width: 80%;
        height: 80%;
        margin-top: 10px;
        border-radius: 10px;
    }

    span.card-text {
        border: 1px solid rgba(0,0,0,.125);
        padding: 5px 10px;
        border-radius: 7px;
    }

    .card {
        justify-content: center;
        align-items: center;
    }
</style>
<div>
    <h2>T-Shirts for Sale</h2>
</div>

<div class="row">
    <div class="card" style="width:18em;margin:10px;height:20em;">
        <a asp-action="Save"><img src="/images/add-tshirt.jpg" alt="Add Tshirt"></a>
    </div>
    @foreach (var item in Model.TShirts)
    {
        <div class="card" style="width:18em;margin:10px;height:20em;" onclick="javascript:window.location.href='/home/details/@item.Id'">
            <img class="card-img-top" src="@item.ImageSrc">
            <div id="@("card"+item.Id.ToString())" class="divChild">
                <a asp-action="Save" asp-route-id="@item.Id"><img src="/images/edit-icon-png-3587.png"></a>

                <a class="Delete" style="padding-top:10px;" href="javascript:;" onclick="callDelete(@item.Id)"><img src="/images/icons8-delete-100.png"></a>
            </div>
            <div class="card-body">
                <span class="card-text">@item.Size</span>
                <span class="card-text">@("\u20B9" + item.Price)</span>
                <span class="card-text">@item.Gender_Display</span>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    //Delete event handler.
    function callDelete(deleteId) {
        if (confirm("Do you want to delete this record?")) {
            $.ajax({
                type: "POST",
                url: "/Home/Delete/" + deleteId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function() 
                {
                     window.location.reload();
                }
            }).done(function(response) {
               

            });
        }

    }
</script>
